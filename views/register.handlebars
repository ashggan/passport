<section class="section">
    <div class="container">
      <div class="columns is-gapless  is-mobile is-mobile is-centered is-vcentered">
          <div class="column is-half">
            <h4 class="is-centered">REGISTER </h4>
            <div class="field">
              <form action="/users/register" method="POST">
                <div class="field">
                  <p class="control has-icons-left has-icons-right">
                    <input class="input" type="text" placeholder="Name" value="{{name}}" name="name" required>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                    {{!-- <span class="icon is-small is-right"> <i class="fas fa-check"></i> </span> --}}
                  </p>
                </div>
                <div class="field">
                  <p class="control has-icons-left has-icons-right">
                    <input class="input" type="email" placeholder="Email" value="{{email}}" name="email" required>
                    <span class="icon is-small is-left">
                      <i class="fas fa-envelope"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="fas fa-check"></i>
                    </span>
                  </p>
                  {{#if errors.email }}
                  <p class="help is-danger">   {{errors.email}}   </p>
                  {{/if}}
                </div>
                <div class="field">
                  <p class="control has-icons-left">
                    <input class="input" type="password" placeholder="Password" name="password" value="{{password}}" required>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                  </p>
                  {{#if errors.pass_len }}
                  <p class="help is-danger">   {{errors.pass_len}}   </p>
                  {{/if}}
                </div>
                <div class="field">
                  <p class="control has-icons-left">
                    <input class="input" type="password" placeholder="Confirm Password" value="{{confirm_password}}" name="confirm_password" required>
                    <span class="icon is-small is-left">
                      <i class="fas fa-lock"></i>
                    </span>
                  </p>
                   {{#if errors.pass_con }}
                  <p class="help is-danger">   {{errors.pass_con}}   </p>
                  {{/if}}
                </div>
                <div class="field">
                  <p class="control">
                    <button class="button is-success">
                      Register
                    </button>
                  </p>
                </div>
                <div class="field">
                  <div class="control">
                    <label class="checkbox">
                    Already have an account <a href="/users/login">Login </a>
                    </label>
                  </div>
                </div>
              </form>
            </div>      
          </div>
      </div>
      
    </div>
</section>